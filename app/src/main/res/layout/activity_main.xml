        android:layout_height="48dp"
        android:padding="8dp"
        android:hint="Digite sua Idade"
        android:gravity="center"
        android:textSize="16sp"

        />

    <Button
        android:id="@+id/buttonCalcular"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:fontFamily=""
